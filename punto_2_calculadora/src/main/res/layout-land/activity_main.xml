<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op1"
                android:textSize="25dp"
                android:layout_margin="@dimen/activity_horizontal_margin"/>
            <EditText
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:inputType="numberDecimal|numberSigned"
                android:numeric="signed"
                android:id="@+id/operando1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op2"
                android:textSize="25dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:inputType="numberDecimal|numberSigned"
                android:numeric="signed"
                android:id="@+id/operando2"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eleccion"
            android:textSize="25dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/activity_vertical_margin">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seleccion"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:onClick="operar"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/suma"
                    android:textSize="25dp"
                    android:typeface="monospace"
                    android:id="@+id/s_suma"
                    android:onClick="operar"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/resta"
                    android:textSize="25dp"
                    android:typeface="monospace"
                    android:id="@+id/s_resta"
                    android:onClick="operar"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/mult"
                    android:textSize="25dp"
                    android:typeface="monospace"
                    android:id="@+id/s_mult"
                    android:onClick="operar"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/div"
                    android:textSize="25dp"
                    android:typeface="monospace"
                    android:id="@+id/s_div"
                    android:onClick="operar"/>
            </RadioGroup>

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton"
            android:textSize="25dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:id="@+id/result"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Mensaje"
                android:textSize="25dp"
                android:layout_margin="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:hint="@string/resultado"
                android:textSize="20dp"
                android:typeface="serif"
                android:maxLength="6"
                android:id="@+id/mostrar"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
